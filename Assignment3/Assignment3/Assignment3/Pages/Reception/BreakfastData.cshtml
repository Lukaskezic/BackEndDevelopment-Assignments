@page
@model Assignment3.Pages.Reception.BreakfastDataModel
@{
}
<div>
    <h2> Breakfasts: @Model.DateNow</h2>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Room Number:
            </th>
            <th>
                Adults:
            </th>
            <th>
                Children:
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.CheckedIn)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adults)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Children)
            </td>            
        </tr>
    }
    </tbody>
</table>
